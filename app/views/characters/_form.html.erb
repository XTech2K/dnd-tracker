  <%= f.input :level %>
  <%= f.input :race %>
  <%= f.input :cclass, label: 'Class' %>
  <hr/>
  <%= f.input :max_hit_points %>
  <%= f.input :surge_value %>
  <%= f.input :surges_per_day %>
  <%= f.input :initiative %>
  <%= f.input :armor_class, label: 'AC' %>
  <%= f.input :fortitude %>
  <%= f.input :reflex %>
  <%= f.input :will %>
  <%= f.input :speed %>
  <%= f.input :strength %>
  <%= f.input :constitution %>
  <%= f.input :dexterity %>
  <%= f.input :intelligence %>
  <%= f.input :wisdom %>
  <%= f.input :charisma %>
  <hr/>
  <%= f.input :acrobatics %>
  <%= f.input :arcana %>
  <%= f.input :athletics %>
  <%= f.input :bluff %>
  <%= f.input :diplomacy %>
  <%= f.input :dungeoneering %>
  <%= f.input :endurance %>
  <%= f.input :heal %>
  <%= f.input :history %>
  <%= f.input :insight %>
  <%= f.input :intimidate %>
  <%= f.input :nature %>
  <%= f.input :perception %>
  <%= f.input :religion %>
  <%= f.input :stealth %>
  <%= f.input :streetwise %>
  <%= f.input :thievery %>
  <hr/>
  <%= f.input :hit_points %>
  <%= f.input :remaining_surges %>
  <%= f.input :action_points %>
  <%= f.input :temp_hit_points %>
  <hr/>
  <%= f.button :submit %>
<% end %>
